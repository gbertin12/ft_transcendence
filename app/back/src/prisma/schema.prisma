generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    // 42 id from the API
    id         Int       @unique
    name       String    @unique
    avatar     String    @default("default.jpg")
    wins       Int       @default(0)
    losses     Int       @default(0)
    elo        Int       @default(1000)
    otp        Boolean   @default(false)
    otpSecret  String?
}
